javascript:
  $(function(){
    var $div = $("[class^=body]");
    for (var i = 0; i < $div.length; i++){
      var div = $div[i].textContent;
      $div[i].innerHTML = div;
    }
    $div.show();
  })
body
  == slim :blog_header
  == slim :blog_overview
  == slim :calendar
  == slim :profile
  == slim :latest_article
  
  .main
    ul
      - entry_repository.recent.each do |entry|
        li
          .entry-title
            a(href="/entries/#{entry.id}")= entry.title
          div(class="body#{entry.id}") = entry.body_html
          .footer
            - entry.tags.split(",").each do |tag|
              a(href="/tags/#{tag}") = tag
              span &nbsp;
            
            p 投稿日時 : #{entry.posted_at}
